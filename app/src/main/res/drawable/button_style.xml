<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="-90"
                android:centerColor="#f3e4c6"
                android:endColor="#e6eff3"
                android:startColor="#e6eff3"
                android:type="linear"/>
            <stroke
                android:width="4dp"
                android:color="#8f4f06"/>
            <corners
                android:radius="4dp"/>
            <padding
                android:bottom="2dp"
                android:left="10dp"
                android:right="10dp"
                android:top="2dp"/>
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <gradient
                android:angle="-90"
                android:centerColor="#f3e4c6"
                android:endColor="#e6eff3"
                android:startColor="#e6eff3"
                android:type="linear"/>
            <stroke
                android:width="4dp"
                android:color="#8f4f06"/>
            <corners
                android:radius="8dp"/>
            <padding
                android:bottom="2dp"
                android:left="4dp"
                android:right="10dp"
                android:top="2dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <stroke
                android:width="2dp"
                android:color="#708f4f06"/>
            <corners
                android:radius="4dp"/>
            <gradient
                android:angle="-90"
                android:centerColor="#70f3e4c6"
                android:endColor="#70e6eff3"
                android:startColor="#70e6eff3"
                android:type="linear"/>
            <padding
                android:bottom="2dp"
                android:left="10dp"
                android:right="10dp"
                android:top="2dp"/>
        </shape>
    </item>
</selector>